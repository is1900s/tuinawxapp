/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: #333;
}

/* 容器 */
.container {
  padding: 20rpx;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }

.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 10rpx; }
.pr-10 { padding-right: 10rpx; }

/* 文本 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.text-primary { color: #007AFF; }
.text-success { color: #34C759; }
.text-warning { color: #FF9500; }
.text-danger { color: #FF3B30; }
.text-gray { color: #8E8E93; }
.text-light { color: #999; }

.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }

.font-bold { font-weight: bold; }

/* 卡片 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 按钮 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  outline: none;
}

.btn-primary {
  background-color: #007AFF;
  color: #fff;
}

.btn-secondary {
  background-color: #F2F2F7;
  color: #333;
}

.btn-success {
  background-color: #34C759;
  color: #fff;
}

.btn-warning {
  background-color: #FF9500;
  color: #fff;
}

.btn-danger {
  background-color: #FF3B30;
  color: #fff;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 输入框 */
.input {
  padding: 20rpx;
  border: 1rpx solid #E5E5EA;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.input:focus {
  border-color: #007AFF;
}

/* 列表 */
.list-item {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.list-item:last-child {
  border-bottom: none;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-lg {
  width: 120rpx;
  height: 120rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  background-color: #F2F2F7;
  color: #666;
}

.tag-primary {
  background-color: #E3F2FD;
  color: #007AFF;
}

.tag-success {
  background-color: #E8F5E8;
  color: #34C759;
}

.tag-warning {
  background-color: #FFF3E0;
  color: #FF9500;
}

.tag-danger {
  background-color: #FFEBEE;
  color: #FF3B30;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #F2F2F7;
  margin: 20rpx 0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 响应式 */
@media (max-width: 320px) {
  .container {
    padding: 15rpx;
  }
}