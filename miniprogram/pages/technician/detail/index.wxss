/* 技师详情页样式 */
.technician-detail-page {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 技师头部信息 */
.technician-header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(20rpx);
  opacity: 0.8;
}

.technician-basic-info {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
}

.avatar-section {
  position: relative;
  margin-bottom: 30rpx;
}

.technician-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.status-indicator {
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.status-available {
  border-left: 4rpx solid #34C759;
}

.status-busy {
  border-left: 4rpx solid #FF9500;
}

.status-offline {
  border-left: 4rpx solid #8E8E93;
}

.status-text {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}

.info-section {
  text-align: center;
  color: #fff;
  margin-bottom: 30rpx;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.technician-name {
  font-size: 40rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.technician-badges {
  display: flex;
  gap: 10rpx;
}

.badge {
  font-size: 18rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  backdrop-filter: blur(10rpx);
}

.badge-verified {
  background-color: rgba(0, 122, 255, 0.8);
}

.badge-experienced {
  background-color: rgba(255, 149, 0, 0.8);
}

.badge-top {
  background-color: rgba(255, 59, 48, 0.8);
}

.rating-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.rating-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.rating-stars {
  font-size: 28rpx;
  color: #FFD700;
  font-weight: 500;
}

.rating-count,
.order-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.meta-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.response-time,
.completion-rate {
  font-size: 22rpx;
  opacity: 0.7;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 15rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  backdrop-filter: blur(10rpx);
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 服务项目 */
.service-count {
  font-size: 24rpx;
  color: #999;
}

.service-list {
  margin: -10rpx 0;
}

.service-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}

.service-item:last-child {
  border-bottom: none;
}

.service-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background-color: #f2f2f7;
}

.service-info {
  flex: 1;
  min-width: 0;
}

.service-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

.service-price {
  text-align: right;
  flex-shrink: 0;
}

.price-current {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3B30;
  display: block;
}

.price-unit {
  font-size: 22rpx;
  color: #999;
}

.service-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.feature-tag {
  font-size: 20rpx;
  color: #007AFF;
  background-color: #f2f8ff;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

/* 技师简介 */
.intro-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 专业技能 */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.skill-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.skill-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.skill-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.level-stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 20rpx;
  color: #ddd;
}

.star.filled {
  color: #FFD700;
}

/* 工作经历 */
.experience-list {
  margin: -10rpx 0;
}

.experience-item {
  display: flex;
  padding: 20rpx 0;
  border-left: 3rpx solid #007AFF;
  padding-left: 30rpx;
  position: relative;
}

.experience-item::before {
  content: '';
  position: absolute;
  left: -9rpx;
  top: 25rpx;
  width: 15rpx;
  height: 15rpx;
  background-color: #007AFF;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.experience-period {
  width: 200rpx;
  flex-shrink: 0;
  font-size: 22rpx;
  color: #666;
  text-align: right;
  padding-right: 20rpx;
}

.period-start,
.period-end {
  font-weight: 500;
}

.period-separator {
  margin: 0 10rpx;
}

.experience-content {
  flex: 1;
}

.experience-company {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.experience-position {
  font-size: 24rpx;
  color: #007AFF;
  margin-bottom: 8rpx;
  display: block;
}

.experience-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.6;
}

/* 证书资质 */
.certificates-scroll {
  margin: -10rpx -20rpx;
  padding: 0 20rpx;
}

.certificates-list {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.certificate-item {
  flex-shrink: 0;
  width: 200rpx;
  text-align: center;
}

.certificate-image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.certificate-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
  display: block;
}

.certificate-issuer {
  font-size: 20rpx;
  color: #999;
}

/* 用户评价 */
.rating-summary {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.summary-rating {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF9500;
}

.summary-count {
  font-size: 24rpx;
  color: #999;
}

/* 评分分布 */
.rating-distribution {
  margin: 20rpx 0;
}

.rating-bar {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.rating-label {
  width: 60rpx;
  font-size: 22rpx;
  color: #666;
  text-align: right;
}

.rating-progress {
  flex: 1;
  height: 12rpx;
  background-color: #f2f2f7;
  border-radius: 6rpx;
  overflow: hidden;
}

.rating-fill {
  height: 100%;
  background-color: #FF9500;
  transition: width 0.3s ease;
}

.rating-count {
  width: 60rpx;
  font-size: 22rpx;
  color: #999;
  text-align: left;
}

/* 评价标签 */
.review-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin: 20rpx 0;
}

.review-tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f2f2f7;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 评价列表 */
.review-list {
  margin: 20rpx 0;
}

.review-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.review-date {
  font-size: 22rpx;
  color: #999;
}

.review-rating {
  font-size: 24rpx;
  color: #FF9500;
}

.review-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.review-service {
  background-color: #f8f8f8;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.service-label {
  font-size: 22rpx;
  color: #666;
}

.service-name {
  font-size: 24rpx;
  color: #007AFF;
  font-weight: 500;
}

.review-images {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.review-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.review-tags-small {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-small {
  font-size: 20rpx;
  color: #007AFF;
  background-color: #f2f8ff;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx;
}

.load-text {
  font-size: 26rpx;
  color: #007AFF;
}

/* 服务时间 */
.schedule-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.schedule-item {
  text-align: center;
  padding: 20rpx 10rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.schedule-day {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.schedule-time {
  font-size: 22rpx;
}

.schedule-time.available {
  color: #34C759;
}

.schedule-time.unavailable {
  color: #FF3B30;
}

/* 服务范围 */
.area-distance {
  font-size: 24rpx;
  color: #007AFF;
}

.area-info {
  margin-top: 15rpx;
}

.area-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
  display: block;
}

.area-districts {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.district-tag {
  font-size: 22rpx;
  color: #007AFF;
  background-color: #f2f8ff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 底部预约栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 100;
}

.price-info {
  flex: 1;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
  display: block;
}

.price-range {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3B30;
}

.btn-book {
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 地图切换 */
.map-toggle {
  position: fixed;
  bottom: 160rpx;
  right: 20rpx;
  background-color: #fff;
  padding: 15rpx 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  gap: 8rpx;
  z-index: 99;
}

.toggle-icon {
  font-size: 24rpx;
}

.toggle-text {
  font-size: 24rpx;
  color: #333;
}

/* 图片预览弹窗 */
.image-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.image-preview-modal.show {
  opacity: 1;
  visibility: visible;
}

.preview-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.preview-swiper {
  width: 100%;
  height: 60vh;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-close {
  position: absolute;
  top: 80rpx;
  right: 40rpx;
  font-size: 60rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 联系弹窗 */
.contact-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.contact-modal.show {
  opacity: 1;
  visibility: visible;
}

.contact-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.contact-modal.show .contact-content {
  transform: translateY(0);
}

.contact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.contact-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.contact-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-options {
  display: flex;
  gap: 30rpx;
}

.contact-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  padding: 30rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
}

.contact-icon {
  font-size: 48rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .technician-name {
    font-size: 36rpx;
  }

  .skills-grid {
    grid-template-columns: 1fr;
  }

  .schedule-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .contact-options {
    flex-direction: column;
    gap: 20rpx;
  }
}

/* 动画效果 */
.card {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}