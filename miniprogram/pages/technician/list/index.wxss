/* 技师列表页面样式 */
 technician-list-page {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f5f7;
  border-radius: 16rpx;
  padding: 0 32rpx;
  height: 72rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #8e8e93;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background-color: transparent;
}

.clear-btn {
  padding: 8rpx;
  margin-left: 16rpx;
}

.clear-icon {
  font-size: 32rpx;
  color: #8e8e93;
}

.cancel-btn {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #007aff;
}

/* 筛选栏 */
.filter-bar {
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  background-color: #f5f5f7;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666666;
  gap: 8rpx;
}

.filter-btn.active {
  background-color: #007aff;
  color: #ffffff;
}

.filter-icon {
  font-size: 24rpx;
}

.filter-text {
  font-size: 24rpx;
}

/* Tab栏 */
.tab-bar {
  background-color: #ffffff;
  padding: 0 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #007aff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}

.tab-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #ff3b30;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  margin-left: 8rpx;
  min-width: 24rpx;
  height: 24rpx;
}

/* 搜索历史 */
.search-history {
  background-color: #ffffff;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.history-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.history-clear {
  font-size: 24rpx;
  color: #8e8e93;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  display: flex;
  align-items: center;
  background-color: #f5f5f7;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: #666666;
  gap: 8rpx;
}

.history-icon {
  font-size: 24rpx;
}

.history-text {
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-delete {
  font-size: 24rpx;
  color: #8e8e93;
  margin-left: 8rpx;
}

/* 技师列表 */
.technician-list {
  padding: 24rpx;
}

.technician-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
}

.technician-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  flex-shrink: 0;
}

.technician-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.technician-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.technician-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.technician-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #ff9500;
}

.rating-number {
  color: #666666;
}

.technician-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #666666;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.meta-icon {
  font-size: 20rpx;
}

.technician-desc {
  font-size: 24rpx;
  color: #8e8e93;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.technician-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background-color: #f0f9ff;
  color: #007aff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.technician-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #007aff;
  color: #ffffff;
  font-size: 24rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  gap: 8rpx;
  min-width: 100rpx;
}

.action-btn.secondary {
  background-color: #f5f5f7;
  color: #666666;
}

.action-icon {
  font-size: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 24rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #8e8e93;
  margin-bottom: 32rpx;
}

.empty-btn {
  background-color: #007aff;
  color: #ffffff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.filter-modal.show {
  display: flex;
}

.filter-content {
  background-color: #ffffff;
  width: 100%;
  max-height: 80vh;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.filter-close {
  font-size: 36rpx;
  color: #8e8e93;
}

.filter-body {
  padding: 32rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  background-color: #f5f5f7;
  color: #666666;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
}

.filter-option.selected {
  background-color: #007aff;
  color: #ffffff;
}

.filter-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.filter-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
}

.filter-btn.outline {
  background-color: transparent;
  color: #666666;
  border: 2rpx solid #e0e0e0;
}

.filter-btn.primary {
  background-color: #007aff;
  color: #ffffff;
}

/* 快捷操作 */
.quick-actions {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.quick-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 96rpx;
  height: 96rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  font-size: 36rpx;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  background-color: #f8f9fa;
}