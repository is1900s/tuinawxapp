{
  "name": "tuinawxapp",
  "version": "1.0.0",
  "description": "同城上门推拿预约微信小程序",
  "main": "miniprogram/app.js",
  "scripts": {
    "dev": "npm run dev:miniprogram",
    "dev:miniprogram": "cross-env NODE_ENV=development gulp dev",
    "build": "npm run build:miniprogram",
    "build:miniprogram": "cross-env NODE_ENV=production gulp build",
    "lint": "eslint miniprogram/**/*.js",
    "lint:fix": "eslint miniprogram/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "wechat",
    "miniprogram",
    "massage",
    "appointment",
    "tuina"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "jest": "^29.2.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "dayjs": "^1.11.6"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "miniprogram/**/*.js",
      "!miniprogram/app.js",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-debugger": "error"
    }
  }
}